{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "jsx": true,
    "useJSXTextNode": true,
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "no-nested-ternary": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "error",
      {
        "hoist": "all"
      }
    ],
    "@typescript-eslint/type-annotation-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "import/extensions": [
      0,
      "never",
      {
        "ignorePackages": true
      }
    ],
    "spaced-comment": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "camelcase": [
      "error",
      {
        "allow": [
          "oauth2_v2",
          "user_id"
        ],
        "properties": "never"
      }
    ],
    "func-names": [
      "error",
      "never"
    ],
    "semi": "error",
    "no-extra-semi": 0,
    "import/no-unresolved": "off",
    "import/prefer-default-export": 0,
    "no-unused-vars": "off",
    "dot-notation": "off",
    "class-methods-use-this": "off",
    "max-len":"off",
    "no-param-reassign": "off",
    "handle-callback-err": "error",
    "quotes": [
      "error",
      "single"
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {}
}